{
  "name": "igua-rpg",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "browserslist": [
    "last 31 Chrome versions"
  ],
  "scripts": {
    "start": "concurrently \"generate-textures src/images src/textures.ts\" \"generate-howls assets-src/sound src/sound src/sounds.ts\" \"generate-howls assets-src/music src/music src/musics.ts --dontPreload\" \"parcel src/index.html\"",
    "build": "generate-howls assets-src/sound src/sound src/sounds.ts --build && generate-howls assets-src/music src/music src/musics.ts --dontPreload --build && parcel build --public-url ./ src/index.html",
    "build-ogmo-script": "parcel build ogmo/script/iguaOgmo.ts -d ogmo/script --no-source-maps && echo ;window.stupidMotherFucker();>>ogmo/script/iguaOgmo.js",
    "start-test-server": "parcel src/index.html --port 2456",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "start-server-and-test start-test-server http://localhost:2456 cy:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hubol/igua-rpg.git"
  },
