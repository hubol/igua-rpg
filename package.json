{
  "name": "igua-rpg",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "browserslist": [
    "last 31 Chrome versions"
  ],
  "scripts": {
    "serve": "parcel src/index.html",
    "start": "concurrently \"npm run start-generators\" \"npm run serve\"",
    "build": "npm run gen:sounds -- --build && npm run gen:music -- --build && parcel build --public-url ./ src/index.html",
    "start-generators": "concurrently \"npm run gen:textures\" \"npm run gen:sounds\" \"npm run gen:music\" \"npm run watch-gen:levelargs\"",
    "watch-gen:levelargs": "watch \"npm run gen:levelargs\" ./ogmo/levels ./src/gameObjects",
    "gen:textures": "generate-textures src/images src/textures.ts",
    "gen:sounds": "generate-howls assets-src/sound src/sound src/sounds.ts",
    "gen:music": "generate-howls assets-src/music src/music src/musics.ts --dontPreload",
    "gen:levelargs": "start-server-and-test start-gameObjectResolver-server http://localhost:2456 cy:run",
    "start-gameObjectResolver-server": "npm run serve -- --port 2456",
    "cy:run": "cypress run",
    "cy:open": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hubol/igua-rpg.git"
  },
  "author": "Hubol",
  "license": "ISC",
  "devDependencies": {
    "@types/howler": "^2.1.2",
    "@types/node": "^14.0.27",
    "concurrently": "^5.1.0",
    "cypress": "^4.12.1",
    "generate-howls": "^0.2.4",
    "generate-json-exports": "^0.1.0",
    "generate-textures": "^0.1.0",
    "parcel-bundler": "^1.12.4",
    "pissant-node": "^0.1.2",
    "start-server-and-test": "^1.11.3",
    "typescript": "^3.8.3",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "howler": "^2.1.3",
    "pissant": "^0.1.2",
    "pixi.js": "^5.3.2"
  }
}
