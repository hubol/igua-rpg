    "concurrently": "^5.1.0",
    "cypress": "^4.12.1",
    "generate-howls": "^0.2.4",
    "generate-json-exports": "^0.1.0",
    "generate-textures": "^0.1.0",
    "parcel-bundler": "^1.12.4",
    "pissant-node": "^0.1.2",
    "start-server-and-test": "^1.11.3",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
